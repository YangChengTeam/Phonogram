        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="--"
        android:textSize="17sp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/common_title3"/>
</LinearLayout>
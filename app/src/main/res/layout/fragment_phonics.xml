<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true">

    <com.yc.phonogram.ui.views.MainBgView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">
        <LinearLayout
            android:layout_width="560dp"
            android:layout_height="270dp"
            android:orientation="vertical"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="250.3dp"
                        android:layout_height="187.3dp"
                        android:background="@mipmap/ic_video_bg"
                        android:padding="5dp">

                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="9dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:src="@mipmap/main_bg_left"/>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/main_bg_index"
                                android:layout_centerInParent="true"
                                android:text="16/24"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center"/>
                        </RelativeLayout>

                        <ImageView
                            android:layout_weight="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/main_bg_right"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="34dp"
                    android:layout_height="34dp"/>
                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="163dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:background="@drawable/ph_goods_bg">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textSize="18sp"
                            android:text="自然拼读法"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="单词能力提高必选的12节课"
                            android:textColor="@color/ph_common_title2"
                            android:textSize="16sp"
                            android:padding="5dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="迎新年特价69元"
                            android:padding="5dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="原价60元"
                            android:padding="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.yc.phonogram.ui.views.MainBgView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_ph_right_logo"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="42dp"
        android:layout_marginBottom="30dp"/>
</RelativeLayout>
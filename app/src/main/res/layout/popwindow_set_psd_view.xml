<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="530dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:id="@+id/rl_pay"
                    android:layout_width="507dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/secret_bg_one"
                    android:paddingLeft="30dp"
                    android:paddingTop="10dp"

                    android:paddingRight="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="100dp"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dp_30"
                        android:paddingRight="@dimen/dp_30">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/order_bg"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="设置密码"
                                android:textColor="#ffb522"
                                android:textSize="17sp" />

                            <EditText
                                android:id="@+id/et_pwd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:background="@null"
                                android:hint="请设置密码"
                                android:imeOptions="flagNoExtractUi"
                                android:inputType="textPassword"
                                android:textColor="#ffd6a0"
                                android:textSize="17sp" />
                        </LinearLayout>


                        <ImageView
                            android:id="@+id/iv_login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="30dp"
                            android:src="@mipmap/button_determine" />


                    </LinearLayout>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_pay_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/pay_delete" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="25.3dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="250.3dp"
                    android:layout_height="140dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/ic_video_bg"
                    android:padding="5dp">
                        <com.xinqu.videoplayer.XinQuVideoPlayerStandard
                            android:id="@+id/video_player"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </com.xinqu.videoplayer.XinQuVideoPlayerStandard>
                </RelativeLayout>
                <View
                    android:layout_width="40dp"
                    android:layout_height="match_parent"></View>

                <ImageView
                    android:id="@+id/iv_lp_logo"
                    android:layout_width="232dp"
                    android:layout_height="132dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_lp_content_bg"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="18dp"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="250.6dp"
                        android:layout_height="73.6dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/lp_tips_bg">
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/iv_lp_tips_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_lp_tips_logo"/>

                    <RelativeLayout
                        android:layout_width="200dp"
                        android:layout_height="74dp"
                        android:layout_toRightOf="@+id/iv_lp_tips_logo">
                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:fillViewport="true">
                            <TextView
                                android:id="@+id/tv_lp_tips_content"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_centerVertical="true"
                                android:lineSpacingMultiplier="1.1"
                                android:padding="5dp"
                                android:text="--"
                                android:textColor="@color/black"/>
                        </ScrollView>
                    </RelativeLayout>
                </RelativeLayout>

                <View
                    android:layout_width="36dp"
                    android:layout_height="match_parent"></View>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview_lp"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
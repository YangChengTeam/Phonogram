<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="530dp"
        android:layout_height="338dp">

        <RelativeLayout
            android:id="@+id/rl_pay"
            android:layout_width="500dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@mipmap/pay_success_bg"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:id="@+id/iv_pay_success_tint"
                android:layout_width="452dp"
                android:layout_height="147dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="40dp"
                android:background="@mipmap/pay_success_tint"
                android:orientation="vertical" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="452dp"
                android:layout_height="61dp"
                android:layout_below="@id/iv_pay_success_tint"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@mipmap/pay_inner_bg"
                android:hint="@string/input_phone"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingLeft="@dimen/dp_20"
                android:textColor="#EDDDD9"
                android:textColorHint="#EDDDD9"
                android:textStyle="bold" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="245dp"
            android:layout_height="52dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/pay_confirm" />

        <ImageView
            android:id="@+id/iv_pay_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/pay_delete" />
    </RelativeLayout>

</LinearLayout>